# Basic Settings
set hidden true
set ignorecase true
set icons true
set scrolloff 10
set autoquit true

# Custom Functions
cmd mkdir ${{
	printf "Directory Name: "
		read ans
		mkdir $ans
}}

cmd mkfile ${{
	printf "File Name: "
		read ans
		nvim $ans
}}

cmd open &{{
	case $(file --mime-type -Lb $f) in
		text/*|application/json|application/javascript|inode/*|application/*-ini) lf -remote "send $id \$nvim \$fx";;
		image/*) pkill -SIGKILL imv; imv -W 1100 -H 575 "$f";;
		audio/*|video/*|application/ogg) pkill -SIGKILL mpv; mpv --geometry=50% --force-window "$f";;
		application/pdf|image/vnd.djvu|application/x-cbr|application/x-cbz|application/x-comic|application/x-comic+zip) zathura "$f";;
		application/vnd.oasis.opendocument.*|application/vnd.ms-office|application/vnd.openxmlformats-officedocument.*|application/vnd.sun.xml.*) libreoffice "$f";;
		*) xdg-open "$f"
	esac
}}

cmd extract ${{
	clear; tput cup $(($(tput lines)/3)); tput bold
	set -f
	printf "%s\n\t" "$fx"
	printf "extract? [y/N] "
	read ans
	[ $ans = "y" ] && {
		case $fx in
			*.tar.bz2)   tar xjf $fx     ;;
			*.tar.gz)    tar xzf $fx     ;;
			*.bz2)       bunzip2 $fx     ;;
			*.rar)       unrar e $fx     ;;
			*.gz)        gunzip $fx      ;;
			*.tar)       tar xf $fx      ;;
			*.tbz2)      tar xjf $fx     ;;
			*.tgz)       tar xzf $fx     ;;
			*.zip)       unzip $fx       ;;
			*.Z)         uncompress $fx  ;;
			*.7z)        7z x $fx        ;;
			*.tar.xz)    tar xf $fx      ;;
		esac
	}
}}

# Bindings
map c
map d
map m

map zi extract

# Basic Functions
map . set hidden!
map dd delete
map du %du -sh "$f"
map a %pkill -SIGKILL swaybg;nohup swaybg -i "$f" > /dev/null 2>&1 &

# Backup
map bak %bak "$f"

# map u $trashy restore -r 0
map dr $trashy restore
map de $trashy empty --all
map p paste
map x cut
map y copy
map <enter> open
map R reload
map mf mkfile
map md mkdir
map me $chmod +x "$f"
map <esc> clear

# Movement
map gc cd ~/.config
map gb cd ~/.local/bin
map gn cd ~/.local/dox/notes
map gk cd ~/.local/dox/books
map gd cd ~/.local/dev
map gi cd ~/.local/img
map gm cd ~/.local/music
map ga cd ~/.local/audio
map gv cd ~/.local/vids
map gs cd ~/.local/share
map gr cd ~/.local/git-repos
map gp cd ~/.local/practice
map gl cd ~/.local/dl
map gx cd ~/.local/dox
map gt cd /opt/void/
