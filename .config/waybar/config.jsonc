{
	"layer": "top",
	"spacing": 0,
	"height": 15,

	"margin-top": 4,
	"margin-right": 4,
	"margin-bottom": 0,
	"margin-left": 4,

	"modules-left": [
		"river/tags"
	],

	"modules-center": [
		"clock"
	],

	"modules-right": [
		// "tray",
		"cpu",
		"memory",
		"battery",
		"network",
		"pulseaudio"
	],

	"river/tags": {
		"disable-scroll": true,
		"all-outputs": true,
		"tooltip": false,
		"hide-vacant": true
	},

	"clock": {
		"format": "{:%I:%M %p}",
		"tooltip": false
	},

	"cpu": {
		"format": "CPU {usage}%",
		"interval": 2,
		"states": {
			"critical": 60
		}
	},

	"memory": {
		"format": "MEM {percentage}%",
		"interval": 2,
		"states": {
			"critical": 60
		}
	},

	"battery": {
		"format": "BAT {capacity}%",
		"format-charging": "CHR {capacity}%",
		"interval": 5,
		"states": {
			"warning": 20,
			"critical": 10
		},
		"tooltip": false
	},

	"network": {
		"format-wifi": "WiFi {bandwidthDownBits}",
		"format-ethernet": "ETH {bandwidthDownBits}",
		"format-disconnected": "No Network",
		"interval": 5,
		"tooltip": false
	},

	"pulseaudio": {
		"scroll-step": 5,
		"max-volume": 150,
		"format": "VOL {volume}%",
		"format-muted": "VOL {volume}%",
		"format-bluetooth": "BT VOL {volume}%",
		"format-bluetooth-muted": "BT VOL {volume}%",
		"tooltip": false
	}
}
