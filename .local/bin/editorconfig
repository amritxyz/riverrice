#!/usr/bin/env bash

CYAN='\033[0;36m'
RESET='\033[0m'

cfg() {
	cat <<EOF > .editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false  # Keep trailing spaces in markdown for formatting

[*.c]
indent_style = tab
indent_size = tab

[*.py]
indent_style = space
indent_size = 4

[*.zig]
indent_style = space
indent_size = 4

[*.rust]
indent_style = space
indent_size = 4

[*.go]
indent_style = space
indent_size = 4
EOF
}

if [ ! -f .editorconfig ]; then
	cfg
else
  echo
	echo -e ":: Editor config already exists"
	read -r -p ":: Do you want to override? (y/N): " OVER
	if [[ "$OVER" == "y" || "$OVER" == "Y" ]]; then
		cfg
	fi
fi
