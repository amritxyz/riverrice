#!/bin/sh

export WM="river"
export WL="waylock -init-color 0x000000 -input-color 0x338fff -fail-color 0xff5f59 -ignore-empty-password"
export CTL='systemctl'

choice=$(printf "lock\nsleep\nlogout\nreboot\nshutdown" | \
	fuzzel -p 'Action: ' -I -l 5 --no-mouse --dmenu
)

case "$choice" in
	'lock') $WL ;;
	'sleep') $CTL suspend && $WL ;;
	"logout") pkill -SIGKILL $WM ;;
	'reboot') reboot ;;
	'shutdown') poweroff ;;
	*) exit 1 ;;
esac
